<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".others.Receipt">
    <LinearLayout
        android:id="@+id/back"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="5sp"
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="20dp"
        android:id="@+id/header"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/bg_button"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="@string/business_certificate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvBusinessId"
            android:textColor="@color/text_color"
            android:text="@string/business_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/view"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>

    <ScrollView
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="200dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/bg_button"
                android:textSize="14sp"
                android:text="@string/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvBusinessName"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/business_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>


            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvOwner"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/owner_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/business_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvActivity"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/informal_sector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/detailed_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDetailedActivity"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/detailed_activity_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>


            <include layout="@layout/date"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

               <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                   <LinearLayout
                       android:layout_gravity="right"
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <TextView
                           android:textSize="14sp"
                           android:textColor="@color/text_color"
                           android:text="@string/plot"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>

                       <TextView
                           android:id="@+id/tvPlotNumber"
                           android:textSize="15sp"
                           android:textColor="@color/black"
                           android:text="@string/plot_"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>


                   </LinearLayout>

                   <LinearLayout
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:text="@string/box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvBox"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="@string/box_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </FrameLayout>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:text="@string/sbp_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvSBPFee"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="@string/sbp_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:text="@string/pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvKRAPin"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="@string/pin_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </FrameLayout>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>


            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/physical_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPhysicalAddress"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/physical_address_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>




            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>


        </LinearLayout>
    </ScrollView>

    <View
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>


    <FrameLayout
        android:background="#FFFFFF"
        android:id="@+id/bottom"
        android:weightSum="2"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="70sp">

        <TextView
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:text="@string/certificate_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include layout="@layout/status"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>