<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sbp.applications.Applications">

    <FrameLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_message_header"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            tools:text="All SBP Permits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/closeBottom"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:src="@drawable/close_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginEnd="10dp"
            android:layout_weight="0.6"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/search_icon_glass"
            android:textSize="12sp"
            android:hint="@string/search"
            android:id="@+id/edSearch"
            android:paddingStart="10dp"
            android:background="@drawable/bg_outline_white"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="45sp"/>




    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/business_name"
            android:layout_width="140sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/amount_paid"
            android:layout_width="80sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/contacts_location"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <include layout="@layout/progressbar"/>

    <include layout="@layout/recycler_view"/>



</LinearLayout>