<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".others.CessPayments">

    <FrameLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="@string/clamping_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </FrameLayout>

    <RadioGroup
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/radio_tobe_clamped"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:layout_weight="1"
            android:text="@string/to_be_clamped"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_height="35dp"
            android:textColor="@drawable/indicator_text_color"
            android:background="@drawable/bg_oval_selector"
            />

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/radio_tobe_unclamped"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:layout_weight="1"
            android:text="@string/to_be_un_clamped"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:button="@null"
            android:textColor="@drawable/indicator_text_color"
            android:background="@drawable/bg_oval_selector"
            />

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/radio_clamped"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:layout_weight="1"
            android:text="@string/clamped"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:button="@null"
            android:textColor="@drawable/indicator_text_color"
            android:background="@drawable/bg_oval_selector"
            />

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/radio_towed"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:layout_weight="1"
            android:text="@string/towed"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:button="@null"
            android:textColor="@drawable/indicator_text_color"
            android:background="@drawable/bg_oval_selector"
            />


    </RadioGroup>


    <LinearLayout
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginEnd="10dp"
            android:layout_weight="0.6"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/search_icon_glass"
            android:textSize="12sp"
            android:hint="@string/search"
            android:id="@+id/edSearch"
            android:paddingStart="10dp"
            android:background="@drawable/bg_outline_white"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="45sp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="5dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/vehicle"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/location"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/time_elapsed"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <include layout="@layout/progressbar"/>

    <include layout="@layout/recycler_view"/>


</androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>






