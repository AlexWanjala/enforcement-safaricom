<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent"
    tools:context=".tabs.Profile">

    <LinearLayout
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:padding="10dp"
            android:background="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/my_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>




    </LinearLayout>



    <include layout="@layout/bottom_nav"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="80sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="300sp"
        android:layout_height="wrap_content">

        <TextView
            android:textAllCaps="true"
            android:id="@+id/tvNameTagProfile"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="35sp"
            android:textSize="35sp"
            android:layout_marginStart="10sp"
            tools:text="@string/px"
            android:textColor="@color/white"
            android:background="@drawable/bg_fill_primary_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nameProfile"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:textSize="20sp"
            android:layout_gravity="center"
            tools:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/email"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:textSize="18sp"
            android:layout_gravity="center"
            tools:text="ginangeta@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="@string/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageLogout"
                    android:src="@drawable/off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:text="@string/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>

        </LinearLayout>

        <TextView
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/my_assigned_zones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="1sp"/>

        <TextView
            android:id="@+id/tv_zone"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/labels"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Oyugis Bus Park"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>