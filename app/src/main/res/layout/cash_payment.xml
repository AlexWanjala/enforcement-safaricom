<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="20dp"
            android:src="@drawable/time_span"
            android:layout_width="wrap_content"
            android:layout_height="170dp"/>


        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:text="@string/cash_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


             <View
                 android:layout_marginTop="20dp"
                 android:background="@color/grey"
                 android:layout_width="match_parent"
                 android:layout_height="2dp"/>



        <TextView
            android:id="@+id/tvAmountDes"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="By clicking the button below, you confirm the receipt of KES 3000 from the client. This amount will be reflected on your end for remittance to the county."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tvAmount"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:text="KES 300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/bg_fill_primary"
            android:id="@+id/btnPayCash"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="@string/confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



            <TextView
                android:layout_marginBottom="30dp"
                android:textColor="@color/primay_color"
                android:id="@+id/tv_close_button_cash"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



    </LinearLayout>

</LinearLayout>