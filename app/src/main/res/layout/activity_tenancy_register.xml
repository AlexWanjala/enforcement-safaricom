<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sbp.applications.Applications">

    <FrameLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_message_header"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="@string/promise_payments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/closeBottom"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:src="@drawable/close_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <RadioGroup
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/radio_all_rental"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:layout_weight="1"
            android:text="All rentals"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_height="35dp"
            android:textColor="@drawable/indicator_text_color"
            android:background="@drawable/bg_oval_selector"
            />

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/radio_compliant"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:layout_weight="1"
            android:text="Compliant"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:button="@null"
            android:textColor="@drawable/indicator_text_color"
            android:background="@drawable/bg_oval_selector"
            />

        <RadioButton
            android:textSize="10sp"
            android:id="@+id/radio_defaulters"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:layout_weight="1"
            android:text="Rent Defaulters"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:button="@null"
            android:textColor="@drawable/indicator_text_color"
            android:background="@drawable/bg_oval_selector"
            />

    </RadioGroup>


    <TextView
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/labels"
        android:text="@string/market"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <LinearLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_background"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:gravity="center"
            android:elevation="5dp"
            android:id="@+id/spinnerIncomeType"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>


    <LinearLayout
        android:weightSum="4"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/unit_no_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/tenant_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/rent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="9sp"
            android:textStyle="bold"
            android:text="@string/amount_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <include layout="@layout/progressbar"/>

    <include layout="@layout/recycler_view"/>



</LinearLayout>