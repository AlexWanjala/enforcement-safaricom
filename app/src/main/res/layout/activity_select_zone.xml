<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectZone">
<LinearLayout
    android:padding="20sp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectZone">

    <TextView
        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="20sp"
        android:text="@string/select_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/layout_subs"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="25dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/labels"
            android:text="@string/sub_county"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/rectangle_background"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:gravity="center"
                android:elevation="5dp"
                android:id="@+id/spinner_sub_county"
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </LinearLayout>






    <TextView
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/labels"
        android:text="@string/select_ward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_background"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:gravity="center"
            android:elevation="5dp"
            android:id="@+id/spinner_ward"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>



    <TextView
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/labels"
        android:text="@string/select_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_background"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:gravity="center"
            android:elevation="5dp"
            android:id="@+id/spinner_zone"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>



    <include layout="@layout/progressbar"/>


    <Button
        android:fontFamily="@font/montserrat"
        android:background="@drawable/bg_fill_primary"
        android:id="@+id/btn_done"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:text="@string/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>