<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sbp.application.BusinessOwner">


    <LinearLayout
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:padding="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/new_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/closeBottom"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:src="@drawable/close_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/montserrat"
                    android:textSize="14sp"
                    android:textColor="@color/circle_color"
                    android:textAllCaps="true"
                    android:text="@string/business_contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginStart="10sp"
                    android:layout_gravity="center"
                    android:background="@color/circle_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>


            <TextView
                android:drawablePadding="10dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/ed_business_email"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/email_address_hint"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/labels"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="@string/postal_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/ed_postal_address"
                        android:textSize="12sp"
                        android:hint="@string/postal_address"
                        android:padding="13dp"
                        android:background="@drawable/rectangle_background"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/labels"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="@string/postal_conde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:id="@+id/ed_postal_code"
                        android:textSize="12sp"
                        android:hint="@string/postal_conde"
                        android:padding="13dp"
                        android:background="@drawable/rectangle_background"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>


            <TextView
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/star"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/company_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:inputType="phone"
                android:id="@+id/ed_business_phone"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/enter_phone_hint"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="20sp"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:textColor="@color/circle_color"
                android:textAllCaps="true"
                android:text="@string/contact_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:drawablePadding="10dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/full_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="textPersonName"
                android:id="@+id/ed_contact_person_names"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/full_names"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:drawablePadding="10dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/id_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="number"
                android:id="@+id/ed_contact_person_idNo"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/id_no_hint"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>





            <TextView
                android:drawablePadding="10dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/contact_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/rectangle_background"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:layout_marginStart="10sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/spinner_role"
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />


            </LinearLayout>



            <TextView
                android:drawablePadding="10dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/contact_person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="phone"
                android:id="@+id/ed_contact_person_phone"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/contact_person_phone"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:drawablePadding="10dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/contact_person_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:inputType="textEmailAddress"
                android:id="@+id/ed_contact_person_email"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/contact_person_email"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <Button
                android:drawableTint="@color/grey"
                android:backgroundTint="@color/grey"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_fill_primary"
                android:id="@+id/btn_next"
                android:layout_gravity="bottom"
                android:layout_marginTop="60dp"
                android:text="@string/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:backgroundTint="@color/circle_color"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_outline_white"
                android:id="@+id/btn_previous"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:textColor="@color/circle_color"
                android:text="@string/previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>


</ScrollView>