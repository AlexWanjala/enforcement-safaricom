<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    android:background="@color/white"
    app:behavior_peekHeight="0dp"
    android:elevation="20dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:id="@+id/linear"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/receipt_searching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/closeBottom"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:src="@drawable/close_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <TextView
            android:textSize="12sp"
            android:textColor="@color/labels"
            android:fontFamily="@font/montserrat"
            android:text="@string/receipt_searching_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:textColor="@color/labels"
            android:fontFamily="@font/montserrat"
            android:text="@string/receipt_searching_des_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <include layout="@layout/progressbar"/>

        <include layout="@layout/message"/>

        <EditText
            android:drawablePadding="10dp"
           android:drawableLeft="@drawable/search_icon"
            android:textSize="12sp"
            android:hint="@string/search"
            android:id="@+id/edSearch"
            android:paddingStart="10dp"
            android:background="@drawable/bg_outline_white"
            android:textColor="@color/black"
            android:layout_marginTop="10sp"
            android:layout_width="match_parent"
            android:layout_height="45sp"/>

        <Button
            android:textSize="12sp"
            android:fontFamily="@font/montserrat"
            android:id="@+id/buttonSearch"
            android:layout_marginTop="20sp"
            android:background="@drawable/bg_fill_primary"
            android:text="@string/search_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </androidx.appcompat.widget.LinearLayoutCompat>




</androidx.constraintlayout.widget.ConstraintLayout>