<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.loukwn.stagestepbar.StageStepBar
        app:ssb_thumbSize="0dp"
        app:ssb_filledTrackColor="@color/black"
        app:ssb_verticalDirection="ttb"
        app:ssb_orientation="vertical"
        android:layout_width="50dp"
        android:id="@+id/stageStepBar"
        android:layout_height="wrap_content"
        app:ssb_stageStepConfig="1"
        app:ssb_animationDuration="2000"/>

    <LinearLayout
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="order_received"
            android:layout_width="wrap_content"
            android:layout_height="0dp">

            <TextView
                android:textSize="12dp"
                android:id="@+id/tvStatus"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="order_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvStatusDes"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/text_color_grey"
                android:textSize="8dp"
                android:text="Wait for Response"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>