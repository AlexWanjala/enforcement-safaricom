<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sbp.application.BusinessOwner">


    <LinearLayout
        android:id="@+id/mainLinearLayoutLL"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:padding="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/new_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/closeBottom"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:src="@drawable/close_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </FrameLayout>

        <View
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/montserrat"
                    android:textSize="14sp"
                    android:textColor="@color/circle_color"
                    android:textAllCaps="true"
                    android:text="@string/building_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_marginStart="10sp"
                    android:layout_gravity="center"
                    android:background="@color/circle_color"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>


            <TextView
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/star"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_business_name"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/business_name_hint"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


              <LinearLayout
                  android:weightSum="2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <LinearLayout
                      android:layout_marginEnd="10dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content">

                      <TextView
                          android:fontFamily="@font/montserrat"
                          android:textColor="@color/labels"
                          android:layout_marginTop="20dp"
                          android:textStyle="bold"
                          android:text="@string/sub_county"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>


                      <LinearLayout
                          android:padding="10dp"
                          android:background="@drawable/rectangle_background"
                          android:layout_marginTop="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                              android:layout_marginStart="10sp"
                              android:gravity="center"
                              android:layout_gravity="center"
                              android:elevation="5dp"
                              android:id="@+id/spinner_sub_county"
                              android:layout_width="match_parent"
                              android:layout_height="24dp" />


                      </LinearLayout>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_marginStart="10dp"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content">


                      <TextView
                          android:fontFamily="@font/montserrat"
                          android:textColor="@color/labels"
                          android:layout_marginTop="20dp"
                          android:textStyle="bold"
                          android:text="@string/ward"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"/>


                      <LinearLayout
                          android:padding="10dp"
                          android:background="@drawable/rectangle_background"
                          android:layout_marginTop="10dp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                              android:layout_marginStart="10sp"
                              android:gravity="center"
                              android:layout_gravity="center"
                              android:elevation="5dp"
                              android:id="@+id/spinner_ward"
                              android:layout_width="match_parent"
                              android:layout_height="24dp" />


                      </LinearLayout>
                  </LinearLayout>

              </LinearLayout>


            <TextView
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/star"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/plot_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/ed_plot_number"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/select_plot_hint"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/star"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/physical_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_physical_address"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/physical_address_hint"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/star"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textColor="@color/labels"
                android:textSize="15sp"
                android:text="@string/building_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ed_building_name"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:padding="15dp"
                android:hint="@string/building_name_hint"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <TextView
                android:fontFamily="@font/montserrat"
                android:textSize="13dp"
                android:textColor="@color/black"
                android:background="@drawable/bg_fill_brown"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:text="@string/specify_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:text="@string/what_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_section"
                    android:textSize="14sp"
                    android:text="@string/section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RadioButton
                    android:id="@+id/radio_whole"
                    android:textSize="14sp"
                    android:layout_marginStart="10sp"
                    android:text="@string/whole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RadioGroup>


            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/labels"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="@string/floor_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <LinearLayout
                        android:padding="10dp"
                        android:background="@drawable/rectangle_background"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:layout_marginStart="10sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:elevation="5dp"
                            android:id="@+id/spinner_floor"
                            android:layout_width="match_parent"
                            android:layout_height="24dp" />


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/labels"
                        android:layout_marginTop="20dp"
                        android:textStyle="bold"
                        android:text="@string/stall_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/ed_room_no"
                        android:textSize="12sp"
                        android:hint="@string/stall_no_hint"
                        android:padding="13dp"
                        android:background="@drawable/rectangle_background"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>



            <TextView
                android:layout_marginTop="15dp"
                android:textSize="10sp"
                android:textColor="@color/labels"
                android:text="@string/check_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





            <Button
                android:drawableTint="@color/grey"
                android:backgroundTint="@color/grey"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_fill_primary"
                android:id="@+id/btn_next"
                android:layout_gravity="bottom"
                android:layout_marginTop="60dp"
                android:text="@string/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:backgroundTint="@color/circle_color"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_outline_white"
                android:id="@+id/btn_previous"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp"
                android:textColor="@color/circle_color"
                android:text="@string/previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </LinearLayout>


</ScrollView>