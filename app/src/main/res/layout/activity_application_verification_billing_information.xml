                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <!--validated amount-->
                <LinearLayout
                    android:padding="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:layout_weight="0.4"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:text="@string/validated_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="right"
                        android:layout_weight="0.5"
                        android:textAllCaps="true"
                        android:textColor="@color/primay_color"
                        android:text="kes 3,900.00"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <!--Remaining Balance-->
                <LinearLayout
                    android:background="@color/strip"
                    android:padding="5dp"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:layout_weight="0.4"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:text="@string/remaining_balance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="right"
                        android:layout_weight="0.5"
                        android:textAllCaps="true"
                        android:textColor="@color/primay_color"
                        android:text="0.00"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/primay_color"
                        android:text="@string/application_validation_findings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:background="@color/primay_color"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>


                </LinearLayout>



                <LinearLayout
                    android:padding="20sp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_round_corner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/black"
                        android:text="There were 0 changes done and there was a match between validation and the application stages. "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>



                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:text="@string/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:textColor="@color/labels"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat"
                    android:padding="10dp"
                    android:hint="@string/observations_hint"
                    android:background="@drawable/rectangle_background"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>



                <Button
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/bg_fill_primary"
                    android:id="@+id/login"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:text="@string/next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <Button
                    android:backgroundTint="@color/circle_color"
                    android:fontFamily="@font/montserrat"
                    android:background="@drawable/bg_outline_white"
                    android:id="@+id/btn_previous"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/circle_color"
                    android:text="@string/previous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</ScrollView>