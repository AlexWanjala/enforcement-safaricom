<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetLayoutVeterinary"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/linear"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/progressbar"/>

            <FrameLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="@string/veterinary_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/closeBottomFines"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:src="@drawable/close_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <TextView
                android:textSize="12sp"
                android:textColor="@color/labels"
                android:fontFamily="@font/montserrat"
                android:text="@string/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_marginTop="20dp"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:padding="25sp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/fl_stock_market_fees"
                android:layout_marginTop="2dp"
                android:background="@drawable/rectangle_background_blue"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="left"
                    android:src="@drawable/stock"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textColor="@color/circle_color"
                        android:text="@string/stock_market_fees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="250sp"
                        android:textColor="@color/grey_des"
                        android:textSize="9sp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/stock_market_fees_desc"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView

                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:src="@drawable/arrow_right_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </FrameLayout>


            <FrameLayout
                android:layout_marginTop="25sp"
                android:id="@+id/fl_live_stock"
                android:background="@drawable/rectangle_background_blue"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="left"
                    android:src="@drawable/movement"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textColor="@color/circle_color"
                        android:text="@string/livestock_movement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/grey_des"
                        android:textSize="9sp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/livestock_movement_des"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:src="@drawable/arrow_right_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </FrameLayout>


            <FrameLayout
                android:layout_marginTop="25sp"
                android:id="@+id/fl_slaughter"
                android:background="@drawable/rectangle_background_blue"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="left"
                    android:src="@drawable/meat"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textColor="@color/circle_color"
                        android:text="@string/slaughter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/grey_des"
                        android:textSize="9sp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/slaughter_des"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:src="@drawable/arrow_right_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </FrameLayout>


            <FrameLayout
                android:id="@+id/fl_live_stock_licencing"
                android:layout_marginTop="25sp"
                android:background="@drawable/rectangle_background_blue"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="left"
                    android:src="@drawable/licence"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textColor="@color/circle_color"
                        android:text="@string/livestock_licensing_hub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/grey_des"
                        android:textSize="9sp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/livestock_licensing_des"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:src="@drawable/arrow_right_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </FrameLayout>


            <FrameLayout
                android:id="@+id/fl_vet_and_health_hub"
                android:layout_marginTop="25sp"
                android:background="@drawable/rectangle_background_blue"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="left"
                    android:src="@drawable/sindano"
                    android:layout_width="30sp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_marginStart="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="13sp"
                        android:fontFamily="@font/montserrat"
                        android:textStyle="bold"
                        android:textColor="@color/circle_color"
                        android:text="@string/vet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/grey_des"
                        android:textSize="9sp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/vet_des"
                        android:layout_width="250sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    android:src="@drawable/arrow_right_direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </FrameLayout>



        </LinearLayout>


    </LinearLayout>




</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>