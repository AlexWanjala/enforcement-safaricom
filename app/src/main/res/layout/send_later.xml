<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="20dp"
            android:background="@drawable/bg_fill_blue"
            android:src="@drawable/checkbox"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:text="Success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:fontFamily="@font/montserrat"
            android:textColor="@color/labels"
            android:text="Payment Information Sent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:layout_marginTop="20dp"
            android:background="@color/green"
            android:layout_width="55dp"
            android:layout_height="3dp"/>


        <LinearLayout
            android:layout_marginBottom="20sp"
            android:id="@+id/print_invoice_"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/bg_outline_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/print_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
            <TextView
                android:textSize="10sp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/print_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <Button
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/bg_fill_primary"
            android:id="@+id/okay_later"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="@string/okay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>