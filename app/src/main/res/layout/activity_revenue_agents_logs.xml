<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".tabs.Home">


    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:gravity="center"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="10dp"
                android:background="@drawable/touch_feedback"
                android:id="@+id/tvBack"
                android:layout_gravity="left"
                android:gravity="center"
                android:src="@drawable/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_title"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:text="@string/total_county"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="@string/my_assigned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </FrameLayout>

        <RadioGroup
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:checked="true"
                android:padding="10dp"
                android:textSize="10dp"
                android:id="@+id/radio_all"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/all_"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@null"
                android:textColor="@drawable/indicator_text_color"
                android:background="@drawable/bg_oval_selector"/>

            <RadioButton
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:textSize="10dp"
                android:textColor="@drawable/indicator_text_color"
                android:id="@+id/radio_collectors"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/collectors"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@null"
                android:background="@drawable/bg_oval_selector"/>

            <RadioButton
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:textSize="10dp"
                android:textColor="@drawable/indicator_text_color"
                android:id="@+id/radio_inspectors"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/inspectors"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@null"
                android:background="@drawable/bg_oval_selector"/>

            <RadioButton
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:textSize="10dp"
                android:textColor="@drawable/indicator_text_color"
                android:id="@+id/radio_enforcers"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/enforcers"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@null"
                android:background="@drawable/bg_oval_selector"/>

        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/grey"
       />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title">

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:checked="true"
                android:padding="10dp"
                android:textSize="10dp"
                android:id="@+id/radio_inactive"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/inactive"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@null"
                android:textColor="@drawable/indicator_text_color"
                android:background="@drawable/bg_oval_selector"/>

            <RadioButton
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:textSize="10dp"
                android:textColor="@drawable/indicator_text_color"
                android:id="@+id/radio_logged_out"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/logged_out"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@null"
                android:background="@drawable/bg_oval_selector"/>

            <RadioButton
                android:layout_marginStart="20dp"
                android:padding="10dp"
                android:textSize="10dp"
                android:textColor="@drawable/indicator_text_color"
                android:id="@+id/radio_active"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="@string/active"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:button="@null"
                android:background="@drawable/bg_oval_selector"/>

        </RadioGroup>

        <include layout="@layout/progressbar"/>

        <!---->

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@+id/tabs"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/recyclerView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false" />



    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp">

        <include layout="@layout/bottom_sheet_contact" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>