<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageIcon"
                android:padding="20dp"
                android:background="@drawable/bg_circle_red"
                android:src="@drawable/search_not_found"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="10dp"
                android:textColor="@color/red"
                android:text="@string/clamp_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="25dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/labels"
                android:text="@string/offence_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_background"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/spinnerIncomeTypeClamp"
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>
            <TextView
                android:fontFamily="@font/montserrat"
                android:textColor="@color/labels"
                android:layout_marginTop="15dp"
                android:text="@string/offence_sub_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_background"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/spinnerFeeAndChargesClamp"
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/labels"
                android:text="@string/parking_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_background"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/spinnerIncomeType"
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>

            <TextView
                android:fontFamily="@font/montserrat"
                android:textColor="@color/labels"
                android:layout_marginTop="20dp"
                android:text="@string/vehicle_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangle_background"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/spinnerFeeAndCharges"
                    android:layout_width="match_parent"
                    android:layout_height="24dp" />

            </LinearLayout>


            <TextView
                android:textSize="16dp"
                android:id="@+id/tv_message_unpaid"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/labels"
                android:text="@string/clamp_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:id="@+id/ed_reason"
                android:padding="10dp"
                android:hint="@string/clamp_hint"
                android:layout_marginTop="20sp"
                android:background="@drawable/rectangle_background"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <Button
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_fill_primary"
                android:id="@+id/btn_clamp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:text="@string/clamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:text="- OR -"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="14dp"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/bg_outline_gray"
                android:id="@+id/tv_close"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:text="@string/close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>