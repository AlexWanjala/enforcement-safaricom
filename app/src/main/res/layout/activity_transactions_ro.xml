<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".tabs.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/toolBarNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".others.CessPayments">
                <FrameLayout
                    android:gravity="center"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:padding="10dp"
                        android:background="@drawable/touch_feedback"
                        android:id="@+id/tvBack"
                        android:layout_gravity="left"
                        android:gravity="center"
                        android:src="@drawable/back_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/tv_title"
                            android:fontFamily="@font/montserrat"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:text="@string/collections_"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                </FrameLayout>



                <RadioGroup
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:textSize="10sp"
                        android:id="@+id/radio_collections"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:layout_weight="1"
                        android:text="Collections"
                        android:layout_width="wrap_content"
                        android:button="@null"
                        android:layout_height="35dp"
                        android:textColor="@drawable/indicator_text_color"
                        android:background="@drawable/bg_oval_selector"
                        />

                    <RadioButton
                        android:textSize="10sp"
                        android:id="@+id/radio_inspection"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:layout_weight="1"
                        android:text="Inspections"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:button="@null"
                        android:textColor="@drawable/indicator_text_color"
                        android:background="@drawable/bg_oval_selector"
                        />

                    <RadioButton
                        android:textSize="10sp"
                        android:id="@+id/radio_enforcement"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat"
                        android:layout_weight="1"
                        android:text="Enforcements"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:button="@null"
                        android:textColor="@drawable/indicator_text_color"
                        android:background="@drawable/bg_oval_selector"
                        />

                </RadioGroup>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/labels"
                            android:text="@string/to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:background="@drawable/bg_white_curved_corners"
                            android:textSize="12dp"
                            android:id="@+id/tv_date_from"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/down_fill_arrow"
                            tools:text="1 Jun 2023"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="12dp"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/labels"
                            android:text="@string/to"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:background="@drawable/bg_white_curved_corners"
                            android:textSize="12dp"
                            android:id="@+id/tv_date_to"
                            android:fontFamily="@font/montserrat"
                            android:layout_marginStart="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:drawablePadding="10dp"
                            android:drawableRight="@drawable/down_fill_arrow"
                            tools:text="1 Jun 2023"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>




            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:id="@+id/recycler_view_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@+id/banner"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/banner_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_amount"
                    android:fontFamily="@font/montserrat"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="KES 0.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text="collected Revenue from "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_number"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:fontFamily="@font/montserrat"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:text="Tax Payers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <View
                android:elevation="5dp"
                android:layout_marginTop="28dp"
                android:layout_gravity="center"
                android:background="@drawable/dotted"
                android:layout_width="match_parent"
                android:layout_height="6dp"/>
            <LinearLayout
                android:layout_marginStart="50dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/targetMargin"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/white"
                    android:drawableLeft="@drawable/arrow_up"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="0.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:text="Target Margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="1000dp">
            <TextView
                android:id="@+id/tv_message_header"
                android:fontFamily="@font/montserrat"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:background="@color/circle_color"
                android:padding="17sp"
                tools:text="@string/revenue_collection_break_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <include layout="@layout/progressbar"/>
            <include layout="@layout/recycler_view"/>
        </LinearLayout>



    </LinearLayout>

</ScrollView>






