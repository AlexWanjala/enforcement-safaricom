<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".others.Receipt">
    <LinearLayout
        android:id="@+id/back"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginStart="5sp"
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_marginTop="20dp"
        android:id="@+id/header"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="@string/cess_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvIdentifyNo"
            android:textColor="@color/text_color"
            android:text="@string/cess_details_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/view"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/line_color"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>

    <ScrollView
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvCustomerCess"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/bill_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvBillNo"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/bill_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>


            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/bill_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvBillTotal"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/bill_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/reducing_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvReducingBalance_"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/reducing_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/fee_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvFeeDescription"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/fee_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/account_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAccountDesc"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/account_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>

            <TextView
                android:textSize="14sp"
                android:textColor="@color/text_color"
                android:text="@string/receipt_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvReceiptNo_"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="@string/receipt_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/header"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@color/line_color"
                android:layout_width="match_parent"
                android:layout_height="1sp"/>



        </LinearLayout>
    </ScrollView>

    <View
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1sp"/>


    <FrameLayout
        android:id="@+id/bottom"
        android:weightSum="2"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="70sp">

        <TextView
            android:layout_gravity="left"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:text="@string/payment_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvBillingStatus"
            android:background="@drawable/bg_fill_primary"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="@string/paid_fully"
            android:layout_width="100sp"
            android:layout_height="40sp"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>