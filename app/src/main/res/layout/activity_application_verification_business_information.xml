<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".sbp.applications.Applications">

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:context=".sbp.applications.Applications">

    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <FrameLayout
          android:gravity="center"
          android:layout_gravity="center"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="@string/application_verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/closeBottom"
            android:padding="10dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:src="@drawable/close_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

      </FrameLayout>

      <TextView
          android:textSize="10dp"
          android:fontFamily="@font/montserrat"
          android:text="@string/business_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </LinearLayout>



    <View
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/primay_color"
            android:text="@string/business_activity_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:background="@color/primay_color"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>


      </LinearLayout>


      <LinearLayout
          android:layout_marginTop="10dp"
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <!--premises size in m2-->
        <LinearLayout
            android:padding="5dp"
            android:weightSum="1"
            android:background="@color/strip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:textStyle="bold"
              android:textSize="12dp"
              android:layout_weight="0.4"
              android:textAllCaps="true"
              android:textColor="@color/black"
              android:text="@string/premises_size_"
              android:layout_width="0dp"
              android:layout_height="wrap_content"/>


          <TextView
              android:id="@+id/tv_premise"
              android:textStyle="bold"
              android:textSize="12dp"
              android:gravity="right"
              android:layout_weight="0.5"
              android:textAllCaps="true"
              android:textColor="@color/primay_color"
              android:text="10 X 299"
              android:layout_width="0dp"
              android:layout_height="wrap_content"/>

          <Button
              android:onClick="update"
              android:id="@+id/btn_business_premise"
              android:layout_marginStart="10dp"
              android:fontFamily="@font/montserrat"
              android:textSize="9dp"
              android:textColor="@color/white"
              android:text="@string/update"
              android:layout_width="80dp"
              android:layout_height="35dp"/>

        </LinearLayout>

        <!--business description-->
        <LinearLayout
            android:padding="5dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TextView
              android:textStyle="bold"
              android:textSize="12dp"
              android:layout_weight="0.4"
              android:textAllCaps="true"
              android:textColor="@color/black"
              android:text="@string/business_description"
              android:layout_width="0dp"
              android:layout_height="wrap_content"/>


          <TextView
              android:id="@+id/tv_business_des"
              android:textStyle="bold"
              android:textSize="12dp"
              android:gravity="right"
              android:layout_weight="0.5"
              android:textAllCaps="true"
              android:textColor="@color/primay_color"
              android:text=""
              android:layout_width="0dp"
              android:layout_height="wrap_content"/>

          <Button
              android:onClick="update"
              android:id="@+id/btn_business_des"
              android:layout_marginStart="10dp"
              android:fontFamily="@font/montserrat"
              android:textSize="9dp"
              android:textColor="@color/white"
              android:text="@string/update"
              android:layout_width="80dp"
              android:layout_height="35dp"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:textSize="11dp"
            android:text="Ndhiwa M-Pesa Hub: Your local destination for fast and secure mobile money transactions in Ndhiwa County. Convenience at your fingertips!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/star"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/labels"
            android:textSize="15sp"
            android:text="@string/select_business_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/rectangle_background"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <com.toptoche.searchablespinnerlibrary.SearchableSpinner
              android:layout_marginStart="10sp"
              android:gravity="center"
              android:layout_gravity="center"
              android:elevation="5dp"
              android:id="@+id/spinner_category"
              android:layout_width="match_parent"
              android:layout_height="24dp" />


        </LinearLayout>


        <TextView
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/star"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/labels"
            android:textSize="15sp"
            android:text="@string/select_business_sub_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/rectangle_background"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <com.toptoche.searchablespinnerlibrary.SearchableSpinner
              android:layout_marginStart="10sp"
              android:gravity="center"
              android:layout_gravity="center"
              android:elevation="5dp"
              android:id="@+id/spinner_sub_category"
              android:layout_width="match_parent"
              android:layout_height="24dp" />


        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <LinearLayout
              android:layout_marginEnd="10dp"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/montserrat"
                android:textColor="@color/labels"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="@string/number_of_employees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:inputType="number"
                android:id="@+id/ed_number_of_employees"
                android:textSize="12sp"
                android:hint="@string/number_of_employees"
                android:padding="13dp"
                android:background="@drawable/rectangle_background"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

          </LinearLayout>
          <LinearLayout
              android:layout_marginStart="10dp"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="wrap_content">


            <TextView
                android:fontFamily="@font/montserrat"
                android:textColor="@color/labels"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="@string/vehicle_tonnage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/rectangle_background"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

              <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                  android:layout_marginStart="10sp"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:elevation="5dp"
                  android:id="@+id/spinner_tonnage"
                  android:layout_width="match_parent"
                  android:layout_height="24dp" />


            </LinearLayout>
          </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_marginTop="20sp"
            android:text="@string/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:id="@+id/checkbox"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/primay_color"
            android:text="@string/business_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <Button
            android:fontFamily="@font/montserrat"
            android:background="@drawable/bg_fill_primary"
            android:id="@+id/login"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="@string/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <Button
            android:backgroundTint="@color/circle_color"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/bg_outline_white"
            android:id="@+id/btn_previous"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:textColor="@color/circle_color"
            android:text="@string/previous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


      </LinearLayout>



    </LinearLayout>

  </LinearLayout>

</ScrollView>