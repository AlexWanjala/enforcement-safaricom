<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_title"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/labels"
            android:text="Change Owner's Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/labels"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="@string/sub_county"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/rectangle_background"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:layout_marginStart="10sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:elevation="5dp"
                        android:id="@+id/spinner_sub_county"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/labels"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:text="@string/ward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:padding="10dp"
                    android:background="@drawable/rectangle_background"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:layout_marginStart="10sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:elevation="5dp"
                        android:id="@+id/spinner_ward"
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



        <Button
            android:layout_marginBottom="70dp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/bg_fill_primary"
            android:id="@+id/okay"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="@string/change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>