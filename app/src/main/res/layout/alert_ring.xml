<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:background="#4285F4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/tv_close"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_gravity="right"
        android:padding="20sp"
        android:backgroundTint="#5291F9"
        android:background="@drawable/bg_circle_fill"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:drawableTop="@drawable/ex"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.github.ybq.android.spinkit.SpinKitView
            android:visibility="gone"
            android:layout_marginTop="20dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Large.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:SpinKit_Color="@color/colorAccent" />


        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/layoutTime"
            android:visibility="gone"
            android:fontFamily="@font/montserrat"
            android:padding="20sp"
            android:backgroundTint="@color/white"
            android:background="@drawable/bg_circle_fill"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="10"
            android:textStyle="bold"
            android:textSize="33sp"
            >


            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView

                    android:id="@+id/tv_timer"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="10"
                    android:textStyle="bold"
                    android:textSize="33sp"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </FrameLayout>



        <ImageView
            android:layout_marginTop="20sp"
            android:layout_gravity="center"
            android:src="@drawable/ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:text="Alert Kelvin !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_message"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="To alert Kelvin to stay active, click the button below and his phone will ring."
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>



        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/bg_fill_white"
            android:id="@+id/tv_ring"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="@string/alert_Kelvin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>




</FrameLayout>