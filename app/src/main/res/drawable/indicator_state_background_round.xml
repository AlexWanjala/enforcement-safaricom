<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners
                android:topLeftRadius="270dp"
                android:topRightRadius="270dp"
                android:bottomLeftRadius="270dp"
                android:bottomRightRadius="270dp"
                />
            <stroke android:width="1dip" android:color="@color/primay_color" />
            <solid android:color="@color/primay_color" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <corners
                android:topLeftRadius="270dp"
                android:topRightRadius="270dp"
                android:bottomLeftRadius="270dp"
                android:bottomRightRadius="270dp"
                />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <solid android:color="@color/colorAccent" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="270dp"
                android:topRightRadius="270dp"
                android:bottomLeftRadius="270dp"
                android:bottomRightRadius="270dp"
                />
            <stroke android:width="7dip" android:color="@color/yellow" />
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>
</selector>