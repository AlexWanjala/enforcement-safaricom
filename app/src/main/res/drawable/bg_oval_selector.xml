<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />
            <stroke android:width="1dip" android:color="@color/blue_zuku" />
            <solid android:color="@color/blue_zuku" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <corners android:radius="10dip" />
            <stroke android:width="10dip" android:color="@color/circle_color" />
            <solid android:color="@color/circle_color" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="10dip" />
            <!-- <stroke android:width="1dip" android:color="@android:color/holo_red_dark" />
             <solid android:color="@android:color/holo_red_dark" />-->
        </shape>
    </item>
</selector>